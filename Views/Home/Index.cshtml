<!DOCTYPE html>
<html ng-app="LaVendimiApp">

<head>

    <meta charset="utf-8" />
    <title>La Vendimia - POS Web</title>

    <script src="~/Scripts/vendor/jquery-1.8.2.min.js"></script>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/fontawesome/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/fontawesome/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />

    <script src="~/Scripts/vendor/angular.min.js"></script>
    <script src="~/Scripts/vendor/angular-ui-router.min.js"></script>

    @* typehead *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/1.3.3/ui-bootstrap-tpls.js"></script>
    @*<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">*@

    @* controllers *@
    <script src="~/Angular/app/app.js"></script>
    <script src="~/Angular/app/articulo.js"></script>
    <script src="~/Angular/app/articulos.js"></script>
    <script src="~/Angular/app/cliente.js"></script>
    <script src="~/Angular/app/clientes.js"></script>
    <script src="~/Angular/app/configuracion.js"></script>
    <script src="~/Angular/app/home.js"></script>
    <script src="~/Angular/app/inicio.js"></script>
    <script src="~/Angular/app/venta.js"></script>
    <script src="~/Angular/app/ventas.js"></script>

    @* services *@
    <script src="~/Angular/services/articuloService.js"></script>
    <script src="~/Angular/services/clienteService.js"></script>
    <script src="~/Angular/services/configuracionService.js"></script>
    <script src="~/Angular/services/folioService.js"></script>
    <script src="~/Angular/services/ventaService.js"></script>

</head>

<body ng-controller="indexController">

    <header>
        <div id="mySidenav" class="sidenav" style="width:220px;">
            <a ui-sref="inicio">
                <i class="fa fa-home"></i>&nbsp&nbsp<span>Inicio</span>
            </a>
            <a ui-sref="ventas">
                <i class="fa fa-shopping-cart"></i>&nbsp&nbsp<span>Ventas</span>
            </a>
            <a ui-sref="clientes">
                <i class="fa fa-users"></i>&nbsp&nbsp<span>Clientes</span>
            </a>
            <a ui-sref="articulos">
                <i class="fa fa-cubes"></i>&nbsp&nbsp<span>Artículos</span>
            </a>
            <a ui-sref="configuracion">
                <i class="fa fa-gears"></i>&nbsp&nbsp<span>Configuración</span>
            </a>
        </div>
    </header>

    <div id="main" style="margin-left:220px;">
        <div class="container">

            <div style="margin-left:20px;">

                <div style="float:left">
                    <p id="titulo" class="titulo">
                        <a ui-sref="inicio">
                            <span>La Vendimia</span>&nbsp&nbsp<i class="fa fa-tag"></i>
                        </a>
                    </p>
                </div>

                <div style="float:right">
                    <p>{{ fecha | date:'dd/MM/yyyy' }}</p>
                </div>

            </div>

            <div ui-view style="top:60px;position: relative;"></div>

        </div>
    </div>

</body>
</html>