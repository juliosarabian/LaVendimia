<hr />

<div class="container" ng-app="LaVendimiApp">
    <div ng-controller="clientesController">

        <h2 style="text-align:center;">
            Clientes
        </h2>

        <div class="float-right">
            <button class="btn btn-primary" ng-click="Editar(0)">
                Nuevo &nbsp <i class="fa fa-plus"></i>
            </button>
        </div>

        <br />

        <br />

        <table cellpadding="12" class="table table-striped table-hover">
            <tr>
                <td>
                    <b>ID</b>
                </td>
                <td>
                    <b>Nombre</b>
                </td>
                <td>
                    <b>Paterno</b>
                </td>
                <td>
                    <b>Materno</b>
                </td>
                <td>
                    <b>RFC</b>
                </td>
                <td>
                    <b>Editar</b>
                </td>
            </tr>
            <tr ng-repeat="cliente in clientes">
                <td>
                    {{cliente.id}}
                </td>
                <td>
                    {{cliente.nombre}}
                </td>
                <td>
                    {{cliente.paterno}}
                </td>
                <td>
                    {{cliente.materno}}
                </td>
                <td>
                    {{cliente.rfc}}
                </td>
                <td>
                    <button class="btn btn-success" ng-click="Editar(cliente.id)">
                        <i class="fa fa-pencil"></i>
                    </button>
                </td>
            </tr>
        </table>
    </div>
</div>